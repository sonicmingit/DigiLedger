<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.digiledger.backend.mapper.DictCategoryMapper">

    <resultMap id="categoryResultMap" type="com.digiledger.backend.model.entity.DictCategory">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="parentId" column="parent_id" />
        <result property="level" column="level" />
        <result property="sort" column="sort" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <sql id="baseColumns">
        id, name, parent_id, level, sort, created_at, updated_at
    </sql>

    <select id="findAll" resultMap="categoryResultMap">
        SELECT <include refid="baseColumns"/>
        FROM dict_category
        ORDER BY level ASC, sort ASC, id ASC
    </select>

    <select id="findById" parameterType="long" resultMap="categoryResultMap">
        SELECT <include refid="baseColumns"/> FROM dict_category WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.digiledger.backend.model.entity.DictCategory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO dict_category (name, parent_id, level, sort)
        VALUES (#{name}, #{parentId}, #{level}, #{sort})
    </insert>

    <update id="update" parameterType="com.digiledger.backend.model.entity.DictCategory">
        UPDATE dict_category
        SET name = #{name},
            parent_id = #{parentId},
            level = #{level},
            sort = #{sort},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM dict_category WHERE id = #{id}
    </delete>

    <select id="countChildren" resultType="long">
        SELECT COUNT(1) FROM dict_category WHERE parent_id = #{parentId}
    </select>

    <select id="countByNameAndParent" resultType="long">
        SELECT COUNT(1) FROM dict_category
        WHERE name = #{name}
          AND (parent_id <=> #{parentId})
          <if test="excludeId != null">
            AND id <> #{excludeId}
          </if>
    </select>

</mapper>
