<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.digiledger.backend.mapper.PurchaseMapper">

    <select id="sumInvestByAsset" parameterType="long" resultType="java.math.BigDecimal">
        SELECT COALESCE(SUM(price + shipping_cost + tax + other_cost), 0)
        FROM purchase
        WHERE asset_id = #{assetId}
    </select>

</mapper>
